<h3>Categories - <span id="count"><%= @categories.size %></span></h3>

<ul id="list">
    <% for category in @categories %>
        <li id="li_<%= category.id %>"><%= category.name %> 
            <%= link_to "edit", edit_category_path(category), remote: true %>
            <%= link_to "delete", category_path(category), method: :delete, data:{confirm: "Are you sure?"}, remote: true %>
        </li>
    <% end %>
</ul>
<%= link_to "Add Category", new_category_path, id: "add_category", remote: true %>