<h3> Add new project </h3>

<%= form_for @project do |f| %>
<label> Name: </label><br/>
<%= f.text_field :name %><br/>

<label> Client: </label><br/>
<%= f.collection_select :client_id, current_user.clients, :id, :company_name, prompt: "Select Compnay" %><br/>

<label> Description: </label><br/>
<%= f.text_area :description, rows: 10, cols: 50 %><br/>

<label> Status: </label><br/>
<%= f.select :status, %w[new on-going completed not-started] %><br/>

<label> StartDate: </label><br/>
<%= f.date_select :start_date, order: [:day, :month, :year], start_year:(Date.today.beginning_of_year.year - 1) %><br/>

<%= f.submit %>
<% end %>	

